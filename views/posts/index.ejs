<!DOCTYPE html>
<html>
<head>
    <title>MiniProject</title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <h1>Posts</h1>

    <% posts.forEach(post => { %>
        <div class="post">
            <h2><%= post.title %></h2>
            <% if (post.attachment) { %>
                <img src="<%= post.attachment.url %>" alt="Post image">
            <% } %>
            <a href="/posts/<%= post.id %>">Mostrar</a>
            <a href="/posts/<%= post.id %>/edit">Editar</a>
            <a href="/posts/<%= post.id %>/delete">Borrar</a>
        </div>
    <% }) %>
    
    <a href="/posts/new">Crear nuevo post</a>
</body>
</html>
